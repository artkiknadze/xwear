generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id         Int      @id @default(autoincrement())
  title      String
  price      Float
  category   String
  collection String
  model      String
  color      String
  images     String[] @default([])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  Cart         Cart[]
  Wishlist     Wishlist[]
  reviews      Review[]
  productSizes ProductSize[]
  OrderItem    OrderItem[]
}

model ProductSize {
  id        Int    @id @default(autoincrement())
  productId Int
  size      String
  price     Float

  product   Product     @relation(fields: [productId], references: [id])
  carts     Cart[]
  OrderItem OrderItem[]
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  firstName String?
  lastName  String?
  phone     String?
  company   String?
  country   String?
  street    String?
  house     String?
  city      String?
  region    String?
  zip       String?
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Cart      Cart[]
  Order     Order[]
  Wishlist  Wishlist[]

  reviews Review[]
}

model Cart {
  id            Int      @id @default(autoincrement())
  userId        Int
  productId     Int
  productSizeId Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user        User        @relation(fields: [userId], references: [id])
  product     Product     @relation(fields: [productId], references: [id])
  productSize ProductSize @relation(fields: [productSizeId], references: [id])
}

model Order {
  id          Int    @id @default(autoincrement())
  userId      Int
  status      String @default("ordered")
  promocodeId Int?
  firstName String?
  lastName  String?
  phone     String?
  company   String?
  country   String?
  street    String?
  house     String?
  city      String?
  region    String?
  zip       String?
  total     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  promocode Promocode? @relation(fields: [promocodeId], references: [id])
  user  User        @relation(fields: [userId], references: [id])
  items OrderItem[]
}

model OrderItem {
  id            Int   @id @default(autoincrement())
  orderId       Int
  productId     Int
  productSizeId Int
  quantity      Int   @default(1)
  price         Float

  order       Order       @relation(fields: [orderId], references: [id])
  product     Product     @relation(fields: [productId], references: [id])
  productSize ProductSize @relation(fields: [productSizeId], references: [id])
}

model Wishlist {
  id        Int      @id @default(autoincrement())
  userId    Int
  productId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

model Review {
  id        Int      @id @default(autoincrement())
  userId    Int
  productId Int
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

model Promocode {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  discount  Float
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders Order[]
}
